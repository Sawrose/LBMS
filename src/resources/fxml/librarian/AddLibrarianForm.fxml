<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="300" style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #dcdcdc; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lbms.controller.librarian.AddLibrarianFormController">

    <children>
        <VBox spacing="15" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <!-- Username Field -->
            <VBox spacing="5">
                <Label style="-fx-text-fill: #34495e; -fx-font-weight: bold;" text="Username" />
                <TextField fx:id="usernameField" promptText="Enter username" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 6 10;" />
            </VBox>

            <!-- Password Field -->
            <VBox spacing="5">
                <Label style="-fx-text-fill: #34495e; -fx-font-weight: bold;" text="Password" />
                <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 6 10;" />
            </VBox>
            

            <!-- Message Label -->
            <Label fx:id="AddLibMsgLabel" prefHeight="18.0" prefWidth="193.0" style="-fx-text-fill: red; -fx-font-weight: bold;" text="" />

            <!-- Action Buttons -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="cancelBtnAddLibrarian" onAction="#CancelAddLibForm" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 6 20;" text="Cancel" />
                <Button fx:id="saveBtnAddLibrarian" onAction="#SaveLibrarianSaveBtn" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 6 20;" text="Add" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
