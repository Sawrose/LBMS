<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="350.0"
            style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #dcdcdc; -fx-padding: 20;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.lbms.controller.librarian.AddLibrarianFormController">

    <children>
        <VBox spacing="15" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <!-- Username -->
            <VBox spacing="5">
                <Label text="Username" style="-fx-text-fill: #34495e; -fx-font-weight: bold;" />
                <TextField fx:id="usernameField" promptText="name@branch.librarian"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 6 10;" />
            </VBox>

            <!-- Password -->
            <VBox spacing="5">
                <Label text="Password" style="-fx-text-fill: #34495e; -fx-font-weight: bold;" />
                <PasswordField fx:id="passwordField" promptText="Enter password"
                               style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 6 10;" />
                <TextField fx:id="PwVisibleField" promptText="Enter password" visible="false" managed="false"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 6 10;" />

                <!-- Password rules panel -->
                <Pane fx:id="passwordRulesContainer" prefHeight="130" prefWidth="300"
                      style="-fx-background-color: #f4f4f4; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;">
                    <children>
                        <Label fx:id="lengthLabel" layoutX="10" layoutY="5"
                               text="❌ At least 8 characters" style="-fx-font-size: 12; -fx-text-fill: red;" />
                        <Label fx:id="lowercaseLabel" layoutX="10" layoutY="25"
                               text="❌ At least one lowercase" style="-fx-font-size: 12; -fx-text-fill: red;" />
                        <Label fx:id="uppercaseLabel" layoutX="10" layoutY="45"
                               text="❌ At least one uppercase" style="-fx-font-size: 12; -fx-text-fill: red;" />
                        <Label fx:id="digitLabel" layoutX="10" layoutY="65"
                               text="❌ At least one number" style="-fx-font-size: 12; -fx-text-fill: red;" />
                        <Label fx:id="specialCharLabel" layoutX="10" layoutY="85"
                               text="❌ At least one special char (@$!%*?&amp;-_. )" style="-fx-font-size: 12; -fx-text-fill: red;" />
                    </children>
                </Pane>
            </VBox>

            <!-- Phone Number -->
            <VBox spacing="5">
                <Label text="Phone Number" style="-fx-text-fill: #34495e; -fx-font-weight: bold;" />
                <TextField fx:id="PhnField" promptText="Enter phone number"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 6 10;" />
            </VBox>

            <!-- Message Label -->
            <Label fx:id="AddLibMsgLabel" text="" style="-fx-text-fill: red; -fx-font-weight: bold;" prefHeight="18" />

            <!-- Buttons -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="cancelBtnAddLibrarian" text="Cancel" onAction="#CancelAddLibForm"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 6 20; -fx-cursor: hand;" />
                <Button fx:id="saveBtnAddLibrarian" text="Add" onAction="#SaveLibrarianSaveBtn"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 6 20; -fx-cursor: hand;" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
